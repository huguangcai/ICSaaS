<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="15dp"
        android:text="服务项目"
        android:textColor="@color/color_101010"
        android:textSize="14sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="15dp"
            android:text="业务名称：公司注册"
            android:textColor="@color/color_101010"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="一次性业务"
            android:textColor="@color/color_101010"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv1" />

        <TextView
            android:id="@+id/tvStaffName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="办事员：张元，王浩"
            android:textColor="@color/color_101010"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@id/tv1"
            app:layout_constraintTop_toBottomOf="@id/tv1" />

        <TextView
            android:id="@+id/tvContractMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合同金额：10000"
            android:textColor="@color/color_101010"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="@id/tv2"
            app:layout_constraintTop_toBottomOf="@id/tv2"
            app:layout_constraintTop_toTopOf="@id/tvStaffName" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="2020-02-20 ～2021-02-20 "
            android:textColor="@color/color_101010"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/tvStaffName"
            app:layout_constraintTop_toBottomOf="@id/tvStaffName" />

        <TextView
            android:id="@+id/tvDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/icon_right_gray_arrow"
            android:drawablePadding="5dp"
            android:text="详请"
            android:textColor="@color/color_101010"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="@id/tvContractMoney"
            app:layout_constraintTop_toBottomOf="@id/tvContractMoney"
            app:layout_constraintTop_toTopOf="@id/tvDate" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>