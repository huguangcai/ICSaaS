<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/point1"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/shape_acacac_circle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="步骤1"
        android:textColor="@color/color_232424"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/point1"
        app:layout_constraintLeft_toRightOf="@id/point1"
        app:layout_constraintTop_toTopOf="@id/point1" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="1dp"
        android:layout_height="55dp"
        android:background="@color/color_acacac"
        app:layout_constraintLeft_toLeftOf="@id/point1"
        app:layout_constraintRight_toRightOf="@id/point1"
        app:layout_constraintTop_toBottomOf="@id/point1" />


</androidx.constraintlayout.widget.ConstraintLayout>