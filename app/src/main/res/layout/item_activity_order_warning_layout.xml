<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="5dp"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvCompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="河南圣之淼旅游服务有限公司"
        android:textColor="@color/color_101010"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="未还完"
        android:textColor="@color/color_c31a1a"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvCompanyName" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:text="公司注册-有限公司注册"
        android:textColor="@color/color_101010"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/tvCompanyName"
        app:layout_constraintTop_toBottomOf="@id/tvCompanyName" />

    <TextView
        android:id="@+id/tvContractType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="通用合同"
        android:textColor="@color/color_101010"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="@id/tv1"
        app:layout_constraintTop_toBottomOf="@id/tv1" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="客户姓名：张三"
        android:textColor="@color/color_191919"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/tvCompanyName"
        app:layout_constraintTop_toBottomOf="@id/tv2" />

    <TextView
        android:id="@+id/tvManagerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="客户经理：远远"
        android:textColor="@color/color_101010"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="@id/tvContractType"
        app:layout_constraintTop_toBottomOf="@id/tvContractType" />

    <TextView
        android:id="@+id/tvContractMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="合同金额：120000"
        android:textColor="@color/color_191919"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/tvCompanyName"
        app:layout_constraintTop_toBottomOf="@id/tvName" />

    <TextView
        android:id="@+id/tvPaybackMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="收款金额：120000"
        android:textColor="@color/color_101010"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="@id/tvManagerName"
        app:layout_constraintTop_toBottomOf="@id/tvManagerName" />

    <TextView
        android:id="@+id/tvSignDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="签订时间：2020/02/20"
        android:textColor="@color/color_191919"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/tvCompanyName"
        app:layout_constraintTop_toBottomOf="@id/tvContractMoney" />

    <TextView
        android:id="@+id/tvSignEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="到期时间：2021/02/20"
        android:textColor="@color/color_101010"
        android:textSize="12sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/tvPaybackMoney"
        app:layout_constraintTop_toBottomOf="@id/tvPaybackMoney" />

</androidx.constraintlayout.widget.ConstraintLayout>