<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvCompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="河南圣之淼旅游服务有限公司"
        android:textColor="@color/baseColorBlack"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="63dp"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_theme_radius_5"
        android:gravity="center"
        android:text="公司注册"
        android:textColor="@color/colorWhite"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@id/tvCompanyName"
        app:layout_constraintTop_toBottomOf="@id/tvCompanyName" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="63dp"
        android:layout_height="24dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/shape_ff8f41_radius_5"
        android:gravity="center"
        android:text="公司变更"
        android:textColor="@color/colorWhite"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@id/tv1"
        app:layout_constraintTop_toTopOf="@id/tv1" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="63dp"
        android:layout_height="24dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/shape_39c16f_radius_5"
        android:gravity="center"
        android:text="代理记账"
        android:textColor="@color/colorWhite"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@id/tv2"
        app:layout_constraintTop_toTopOf="@id/tv2" />

    <TextView
        android:id="@+id/tvMoney1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="应收金额：1200000"
        android:textColor="@color/color_0d0d0d"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/tv1"
        app:layout_constraintTop_toBottomOf="@id/tv3" />

    <TextView
        android:id="@+id/tvMoney2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="剩余金额：1000.00"
        android:textColor="@color/color_c31a1a"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvMoney1" />

    <TextView
        android:id="@+id/tvManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="客户经理：远远"
        android:textColor="@color/color_191919"
        android:textSize="12sp"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv1"
        app:layout_constraintTop_toBottomOf="@id/tvMoney1"/>


    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="签订时间：2020/02/20"
        android:textColor="@color/color_191919"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvManager" />
</androidx.constraintlayout.widget.ConstraintLayout>