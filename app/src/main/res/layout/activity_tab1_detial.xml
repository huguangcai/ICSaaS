<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_white_bg_layout" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/ic_launcher"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="工商服务-公司注册"
                    android:textColor="@color/baseColorBlack"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toRightOf="@id/iv"
                    app:layout_constraintTop_toTopOf="@id/iv" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="42dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape_c31a1a_bold_radius_0"
                    android:gravity="center"
                    android:text="紧急"
                    android:textColor="@color/color_c31a1a"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/tv1"
                    app:layout_constraintLeft_toRightOf="@id/tv1"
                    app:layout_constraintTop_toTopOf="@id/tv1" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="未办理"
                    android:textColor="@color/color_c31a1a"
                    android:textSize="13sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/iv" />

                <TextView
                    android:id="@+id/tvCompanyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="河南圣之淼旅游服务有限公司"
                    android:textColor="@color/baseColorBlack"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@id/iv"
                    app:layout_constraintLeft_toLeftOf="@id/tv1" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/tv1Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="执行人：张浩"
                    android:textColor="@color/color_232424"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="执行电话："
                    android:textColor="@color/color_232424"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="@id/tv1Name"
                    app:layout_constraintTop_toBottomOf="@id/tv1Name" />


                <TextView
                    android:id="@+id/tv1Phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="188123123123"
                    android:textColor="@color/color_232424"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toRightOf="@id/tv7"
                    app:layout_constraintTop_toBottomOf="@id/tv1Name" />

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_phone"
                    app:layout_constraintBottom_toBottomOf="@id/view1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <View
                    android:id="@+id/view1"
                    style="@style/line_1"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintLeft_toLeftOf="@id/tv1Phone"
                    app:layout_constraintRight_toRightOf="@id/iv1"
                    app:layout_constraintTop_toBottomOf="@id/tv1Phone" />

                <TextView
                    android:id="@+id/tv2Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="客户联系人：远远"
                    android:textColor="@color/color_232424"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="@id/tv1Name"
                    app:layout_constraintTop_toBottomOf="@id/view1" />


                <TextView
                    android:id="@+id/tv8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="客户联系人："
                    android:textColor="@color/color_232424"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="@id/tv2Name"
                    app:layout_constraintTop_toBottomOf="@id/tv2Name" />

                <TextView
                    android:id="@+id/tv2Phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="188123123123"
                    android:textColor="@color/color_232424"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toRightOf="@id/tv8"
                    app:layout_constraintTop_toBottomOf="@id/tv2Name" />


                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_phone"
                    app:layout_constraintBottom_toBottomOf="@id/view2"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/view1" />


                <View
                    android:id="@+id/view2"
                    style="@style/line_1"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintLeft_toLeftOf="@id/tv2Phone"
                    app:layout_constraintRight_toRightOf="@id/iv2"
                    app:layout_constraintTop_toBottomOf="@id/tv2Phone" />


                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="建立时间：2020/02/22"
                    android:textColor="@color/color_232424"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="@id/tv2Name"
                    app:layout_constraintTop_toBottomOf="@id/view2" />


                <TextView
                    android:id="@+id/tvMark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="事项备注：注意安全"
                    android:textColor="@color/color_232424"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/tv2Name"
                    app:layout_constraintTop_toBottomOf="@id/tvTime" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginLeft="15dp"
                    android:text="事项进度"
                    android:textColor="@color/color_232424"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv4" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>