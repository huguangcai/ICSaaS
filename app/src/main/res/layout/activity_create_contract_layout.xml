<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/topView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorWhite"
            android:fitsSystemWindows="true" />

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorWhite">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_left_black_arrow"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/title_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:textColor="@color/color_3b3b3b"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/title_iv_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/title_tv_r"
                android:layout_width="54dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@color/themeColor"
                android:gravity="center"
                android:scaleType="centerInside"
                android:text="提交"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />

        </RelativeLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="客户公司"
                        android:textColor="@color/color_101010"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableRight="@mipmap/icon_right_gray_arrow"
                        android:drawablePadding="10dp"
                        android:gravity="end"
                        android:hint="请选择客户公司"
                        android:textColor="@color/color_101010"
                        android:textSize="14sp" />

                </LinearLayout>

                <View
                    style="@style/line_1"
                    android:layout_marginHorizontal="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="客户经理："
                        android:textColor="@color/color_101010"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableRight="@mipmap/icon_right_gray_arrow"
                        android:drawablePadding="10dp"
                        android:gravity="end"
                        android:hint="请选择客户经理"
                        android:textColor="@color/color_101010"
                        android:textSize="14sp" />

                </LinearLayout>

                <View
                    style="@style/line_1"
                    android:layout_marginHorizontal="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优先级"
                        android:textColor="@color/color_101010"
                        android:textSize="14sp" />

                    <RadioGroup
                        android:id="@+id/radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="0.5" />

                        <RadioButton
                            android:id="@+id/rb1"
                            style="@style/RadioButton_style"
                            android:text="普通"
                            android:textColor="@color/color_101010"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/rb2"
                            style="@style/RadioButton_style"
                            android:text="紧急"
                            android:textColor="@color/color_101010"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="0.5" />
                    </RadioGroup>

                </LinearLayout>

                <View
                    style="@style/line_1"
                    android:layout_marginHorizontal="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="办事员："
                        android:textColor="@color/color_101010"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableRight="@mipmap/icon_right_gray_arrow"
                        android:drawablePadding="10dp"
                        android:gravity="end"
                        android:hint="请选择办事员"
                        android:textColor="@color/color_101010"
                        android:textSize="14sp" />

                </LinearLayout>

                <View
                    style="@style/line_1"
                    android:layout_marginHorizontal="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="签订日期："
                        android:textColor="@color/color_101010"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableRight="@mipmap/icon_right_gray_arrow"
                        android:drawablePadding="10dp"
                        android:gravity="end"
                        android:hint="请选择签订日期"
                        android:textColor="@color/color_101010"
                        android:textSize="14sp" />

                </LinearLayout>

                <View
                    style="@style/line_1"
                    android:layout_marginHorizontal="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注："
                        android:textColor="@color/color_101010"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/etMark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="end"
                        android:hint="请输入沟通内容"
                        android:textColor="@color/color_101010"
                        android:textSize="13sp" />

                </LinearLayout>

                <View
                    style="@style/line_1"
                    android:layout_marginHorizontal="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="合同电子版"
                        android:textColor="@color/color_101010"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvUpload"
                        android:layout_width="54dp"
                        android:layout_height="24dp"
                        android:background="@drawable/shape_theme_radius_0"
                        android:gravity="center"
                        android:text="上传"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <TextView
        android:id="@+id/tvAdd"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="20dp"
        android:background="@color/themeColor"
        android:gravity="center"
        android:text="添加项目服务"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent" />

</LinearLayout>